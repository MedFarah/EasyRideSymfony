{% extends 'baseback.html.twig' %}
{% block title_page %}Livraison{% endblock %}
{% block small_title %}Liste des Livraison{% endblock %}
{% block body %} 
   
                <!-- order table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                               
                                <div class="table-responsive">
                                    <table id="default_order" class="table table-striped table-bordered display no-wrap"
                                        style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#ID</th>
                                                <th>Titre</th>
                                                <th>Prix</th>
                                                <th>Adresse</th>
                                                <th>Tel</th>
                                                <th>Date Creation</th>
                                               
                                            </tr>
                                        </thead>
                                        <tbody>
                                         {% for item in tache %}
                                            <tr>
                                                <td>{{ item.id }}</td>
                                                <td>{{ item.titre }}</td>
                                                <td>{{ item.prix }} DT</td>
                                                <td>{{ item.adresse }}</td>
                                                <td>{{ item.tel }}</td>
                                                <td>{{ item.dateCreation|date('Y-m-d H:i:s') }}</td>                                          
                                            </tr>
                                            
                                   {% endfor %}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>#ID</th>
                                                <th>Titre</th>
                                                <th>Prix</th>
                                                <th>Adresse</th>
                                                <th>Tel</th>
                                                <th>Date Creation</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
